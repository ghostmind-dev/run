{
  "lint": {
    "include": ["**/run/**", "**/.devcontainer/**"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": [
        "no-unused-vars",
        "no-explicit-any",
        "prefer-const",
        "require-await"
      ]
    }
  },
  "compilerOptions": {
    "types": ["./run/types/global.d.ts"]
  }
}
