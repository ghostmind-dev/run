{
  "name": "@ghostmind/run",
  "version": "0.3.63",
  "license": "MIT",
  "description": "A comprehensive DevOps automation toolkit for managing Docker containers, GitHub Actions, Terraform infrastructure, HashiCorp Vault, and more",
  "exports": {
    ".": "./run/main.ts",
    "./cmd": "./run/bin/cmd.ts"
  },
  "lint": {
    "include": [
      "**/run/**",
      "**/.devcontainer/**"
    ],
    "exclude": [
      "**/run/test/**"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars",
        "no-explicit-any",
        "prefer-const",
        "require-await"
      ]
    }
  }
}