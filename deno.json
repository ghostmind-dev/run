{
  "name": "@ghostmind/run",
  "version": "0.1.12",
  "exports": {
    ".": "./run/main.ts",
    "./cmd": "./run/bin/cmd.ts"
  },
  "lint": {
    "include": ["**/run/**", "**/.devcontainer/**"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": [
        "no-unused-vars",
        "no-explicit-any",
        "prefer-const",
        "require-await"
      ]
    }
  },
  "compilerOptions": {
    "types": ["./run/types/global.d.ts"]
  }
}
