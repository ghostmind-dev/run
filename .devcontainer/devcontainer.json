{
  "name": "graph-this",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "PROJECT_DIR": "${env:HOME}${env:USERPROFILE}/projects/container/run"
    }
  },
  "overrideCommand": false,
  "containerUser": "vscode",
  "postCreateCommand": "deno run --allow-all https://raw.githubusercontent.com/ghostmind-dev/init/main/init/main.ts",
  "postStartCommand": "/usr/local/share/post-start.ts",
  "remoteUser": "vscode",
  "remoteEnv": {
    "SRC": "${containerWorkspaceFolder}",
    "LOCALHOST_SRC": "${env:HOME}${env:USERPROFILE}/projects/container/run",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "VAULT_ROOT_TOKEN": "${localEnv:VAULT_ROOT_TOKEN}",
    "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
  },
  "containerEnv": {
    "INIT_EXPORT_ENV_PROJECT": "false",
    "INIT_EXPORT_ENV_ALL": "false",
    "INIT_DEV_INSTALL_DEPENDENCIES": "false",
    "INIT_DEV_RESET_LIVE": "false",
    "INIT_LOGIN_NPM": "false",
    "INIT_LOGIN_GCP": "true",
    "INIT_LOGIN_GAM": "false",
    "INIT_LOGIN_VAULT": "true",
    "INIT_LOGIN_CLOUDFLARED": "true"
  },
  "forwardPorts": ["3000:3000"],
  "appPort": ["8085:8085"],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind",
    "source=${env:HOME}${env:USERPROFILE}/.kube,target=/usr/local/share/kube-localhost,type=bind",
    "source=ghostmind-graph-this-history,target=/commandhistory,type=volume",
    "source=${env:HOME}${env:USERPROFILE}/projects/container/run,target=/Users/francoisseguin/projects/container/run,type=bind"
  ],
  "runArgs": [
    "--cap-add=CAP_IPC_LOCK",
    "--cap-add=NET_ADMIN",
    "--name=run-dvc",
    "--network=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "esbenp.prettier-vscode",
        "humao.rest-client",
        "sdras.inbedby7pm",
        "william-voyek.vscode-nginx",
        "foxundermoon.shell-format",
        "hashicorp.terraform",
        "mikestead.dotenv",
        "hashicorp.hcl",
        "equinusocio.vsc-material-theme",
        "wesbos.theme-cobalt2",
        "sumneko.lua",
        "ghostmind.hide-unhide",
        "tinkertrain.theme-panda",
        "golang.go",
        "yinfei.luahelper",
        "graphql.vscode-graphql",
        "graphql.vscode-graphql-syntax",
        "jdinhlife.gruvbox",
        "styled-components.vscode-styled-components",
        "be5invis.vscode-icontheme-nomo-dark",
        "pkief.material-icon-theme",
        "mtxr.sqltools",
        "ghostmind.mode-context",
        "github.copilot-chat",
        "github.copilot-nightly",
        "ms-python.python",
        "prisma.prisma",
        "bradlc.vscode-tailwindcss",
        "mariorodeghiero.vue-theme",
        "denoland.vscode-deno"
      ]
    }
  }
}
