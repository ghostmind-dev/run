{
  "id": "ic9ETB7juz3g",
  "type": "project",
  "name": "run",
  "routines": {
    "check": "deno check run/bin/cmd.ts",
    "test": "deno test  --allow-all run/test/units.ts",
    "init": "run tmux init run",
    "attach": "run tmux attach run",
    "terminate": "run tmux terminate run",
    "mcp": "run mcp set --all"
  },
  "mcp": {
    "docs": {
      "type": "http",
      "url": "https://docs.ghostmind.dev/mcp"
    }
  },
  "tmux": {
    "sessions": [
      {
        "name": "run",
        "windows": [
          {
            "name": "single",
            "layout": "grid",
            "grid": {
              "type": "single",
              "panes": [
                {
                  "name": "main"
                }
              ]
            }
          },
          {
            "name": "four-pane",
            "layout": "grid",
            "grid": {
              "type": "two-by-two",
              "panes": [
                {
                  "name": "top-left"
                },
                {
                  "name": "top-right"
                },
                {
                  "name": "bottom-left"
                },
                {
                  "name": "bottom-right"
                }
              ]
            }
          },
          {
            "name": "vertical-split",
            "layout": "grid",
            "grid": {
              "type": "vertical",
              "panes": [
                {
                  "name": "left"
                },
                {
                  "name": "right"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}
