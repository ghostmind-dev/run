{
  "id": "ic9ETB7juz3g",
  "type": "project",
  "name": "run",
  "routines": {
    "check": "deno check run/bin/cmd.ts",
    "test": "deno test  --allow-all run/test/units.ts",
    "init": "run tmux init run",
    "attach": "run tmux attach run",
    "terminate": "run tmux terminate run",
    "mcp": "run mcp set --all"
  },
  "mcp": {
    "docs": {
      "type": "http",
      "url": "https://docs.ghostmind.dev/mcp"
    }
  },
  "tmux": {
    "sessions": [
      {
        "name": "run",
        "windows": [
          {
            "name": "simple-test",
            "layout": "sections",
            "section": {
              "split": "vertical",
              "items": [
                {
                  "split": "horizontal",
                  "size": "50%",
                  "items": [
                    {
                      "name": "top-left",
                      "command": "echo 'TOP LEFT'",
                      "size": "50%"
                    },
                    {
                      "name": "bottom-left",
                      "command": "echo 'BOTTOM LEFT'",
                      "size": "50%"
                    }
                  ]
                },
                {
                  "split": "horizontal",
                  "size": "50%",
                  "items": [
                    {
                      "name": "top-right",
                      "command": "echo 'TOP RIGHT'",
                      "size": "50%"
                    },
                    {
                      "name": "bottom-right",
                      "command": "echo 'BOTTOM RIGHT'",
                      "size": "50%"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    ]
  }
}
